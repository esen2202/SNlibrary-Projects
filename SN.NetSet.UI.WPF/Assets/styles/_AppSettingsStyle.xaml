<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SN.NetSet.UI.WPF.Assets.styles">

    <Style x:Key="AppSetTitle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="AppSetLabel" TargetType="TextBlock" BasedOn="{StaticResource LabelTextBlock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="AppSetToggle" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignActionToggleButton}">
        <Setter Property="Width" Value="25"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Background" Value="Gold"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    
</ResourceDictionary>