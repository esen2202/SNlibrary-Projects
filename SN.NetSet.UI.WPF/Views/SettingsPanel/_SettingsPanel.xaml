<UserControl x:Class="SN.NetSet.UI.WPF.Views.SettingsPanel._SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SN.NetSet.UI.WPF.Views.SettingsPanel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="320">

    <Border Name="borderConfiguration" Width="320"  VerticalAlignment="Stretch" HorizontalAlignment="Right" Background="#E1004E93">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- Left Panel Title Bar -->
            <Border Grid.Row="0" Background="#66000000" Padding="2">
                <StackPanel>
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button Name="BtnHideConfiguration" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="2 0 5 4" Background="#FFB44714" BorderBrush="#19FFFFFF" Foreground="#DD00A2FF" Width="25" Height="25" />
                    </DockPanel>
                </StackPanel>
            </Border>

        </Grid>

    </Border>
</UserControl>
